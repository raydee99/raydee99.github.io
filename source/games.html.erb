<%# games.html.erb %>
<main>
  <div class="container py-4 py-xl-5">
    <div class="row mb-5">
      <div class="col-md-8 col-xl-6 text-center mx-auto">
        <h2>Video Games &amp; Table-Top RPGs</h2>
        <p class="w-lg-50">My collection of TTRPG projects and one shot web games.</p>
      </div>
    </div>
    <div class="row gy-4 row-cols-1 row-cols-md-2 row-cols-xl-3">
      <% data['games'].reverse.each do |game| %>
        <%= partial 'shared/game', locals: game.to_hash %>
      <% end %>
    </div>
  </div>
</main>
