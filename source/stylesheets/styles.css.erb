:root {
  --bs-yellow: #EDD23B;
  --bs-yellow-rgb: 237, 210, 59;
  --bs-warning: var(--bs-yellow);
  --bs-warning-rgb: 237, 210, 59;

  --bs-purple: #250C32;
  --bs-purple-rgb: 37, 12, 50;
  --bs-body-bg: var(--bs-purple);
  --bs-body-bg-rgb: var(--bs-purple-rgb);

  --footer-height: 10rem;
}

body {
  position: relative;
  min-height: 100vh;

  /* Gradient with background-image purple: */
  background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0, var(--bs-body-bg)), color-stop(75%, var(--bs-body-bg)), to(#0c1f4c));
  background-image: linear-gradient(var(--bs-body-bg) 75%, #0c1f4c 100%);

  color: var(--bs-white);
}

.bg-none {
  background-color: rgba(0,0,0,0) !important;
}

.mobile-btn {
  width: 50vw;
}

.mobile-icon-flex {
  width: 28px;
  height: 28px;
}
@media (min-width: 768px) {
  .mobile-icon-flex {
    width: 30px;
    height: 30px;
  }
}
@media (min-width: 992px) {
  .mobile-icon-flex {
    width: 34px;
    height: 34px;
  }
}

.mobile-iframe-flex {
  height: 160px;
}
@media (min-width: 992px) {
  .mobile-iframe-flex {
    height: 400px;
  }
}

a.nav-link, a.navbar-brand {
  color: var(--bs-gray-300) !important;
  text-align: center !important;
}

a.nav-link:hover, a.navbar-brand:hover, a.nav-btn:hover {
  font-weight: bold;
}

a.nav-link:active, a.nav-link-active {
  color: var(--bs-yellow)!important;
}

a {
  text-shadow: none !important;
}

.bg-lg-dark {
  background-color: inherit;
}
@media (min-width: 992px) {
  .bg-lg-dark {
    background-color: var(--bs-dark)!important;
  }
}

#content-wrap {
  padding-bottom: var(--footer-height);
}

footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: var(--footer-height);
}

footer a {
  color: var(--bs-yellow)!important;
}

.text-muted {
  color: var(--bs-yellow)!important;
}

.fade-in {
    opacity: 0;
    animation: fadeIn 2s ease-in forwards;
}

@keyframes fadeIn {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

.drop-in {
  animation: dropInFromTop 2s ease;
}

@keyframes dropInFromTop {
  0% {
    transform: translateY(-100%);
    opacity: 0;
  }
  100% {
    transform: translateY(0);
    opacity: 1;
  }
}

.slide-in {
  animation: slideInFromLeft 2s ease-in forwards;
}

@keyframes slideInFromLeft {
  from {
    transform: translateX(-100%);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }

}


